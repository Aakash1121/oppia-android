<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/feedback_reporting_entry_activity_drawer_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/oppiaLightGreen">

    <include
      android:id="@+id/feedback_reporting_entry_activity_toolbar"
      layout="@layout/toolbar" />

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <FrameLayout
        android:id="@+id/feedback_reporting_entry_fragment_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

      <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@drawable/toolbar_drop_shadow" />
    </FrameLayout>
  </LinearLayout>

  <fragment
    android:id="@+id/feedback_reporting_entry_activity_fragment_navigation_drawer"
    android:name="org.oppia.android.app.drawer.NavigationDrawerFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:layout="@layout/drawer_fragment"
    tools:layout="@layout/drawer_fragment" />
</androidx.drawerlayout.widget.DrawerLayout>
